<div class="bg-white rounded pb_form_v1">
<form method="post" action="@Url.Action("GetStatus", "Home")" onsubmit="return validate();">
    <div class="form-group">
        <label for="regNum">Registration Number</label>
        <input type="text" readonly="readonly" id="regNum" name="regNum" class="form-control pb_height-50 reverse" value='@TempData["regNum"]' >     
    </div>

    <div class="form-group">
        <label for="transacNum">Transaction Number</label>
        <input type="text" id="transacNum" name="transacNum" class="form-control pb_height-50 reverse" value='@TempData["transacNum"]' > 
    </div>

    @{  
        if(TempData["message"]!=null){
            <div class="alert alert-primary" role="alert">
                <p style="text-align:justify">
                    @TempData["message"]
                </p>       
            </div>
        }
     }

    <div class="button-group">
        <input type="submit" class="btn btn-primary btn-lg btn-block pb_btn-pill  btn-shadow-blue" value="Get Status">
    </div>

    <script type="text/javascript">
    function validate(){
        if(!$('#regNum').val()){
            return false;
        }
        if(!$('#transacNum').val()){
            return false;
        }
        return true;
    }
</script>

</form>
<button style="margin-top:8px;" class="btn btn-primary btn-lg btn-block pb_btn-pill  btn-shadow-blue" onclick="location.href='@Url.Action("Index", "Home")'" >Go Back</button>
</div>


